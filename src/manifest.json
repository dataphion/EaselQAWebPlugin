{
  "name": "Easel QA",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "ext-icon.png"
  },
  "version": "1.0",
  "icons": {
    "128": "ext-icon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["record.bundle.js", "playback.bundle.js", "content.bundle.js"],
      "all_frames": true
    }
  ],
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://localhost/*", "*://ai.dataphion.com/*"]
  },
  "permissions": ["tabs", "activeTab", "webRequest", "contextMenus", "downloads", "webNavigation", "notifications", "http://*/", "https://*/", "storage", "unlimitedStorage", "<all_urls>", "debugger"]
}
